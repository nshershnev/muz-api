{
  "name": "Muz-api",
  "version": "1.0.0",
  "description": "Back-end for Muz-api project",
  "repository": {
    "type": "git",
    "url": "https://github.com/nshershnev/muz-api.git"
  },
  "author": "Nikita Shershnev",
  "scripts": {
    "start": "npm run build && npm run watch",
    "build": "npm run build-ts && npm run tslint && npm run copy-static-assets",
    "serve": "./node_modules/nodemon/bin/nodemon.js dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve\"",
    "copy-static-assets": "node copyStaticAssets.js",
    "test": "jest --forceExit",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "ajv": "^6.7.0",
    "ajv-keywords": "^3.2.0",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "concurrently": "^4.0.1",
    "connect-mongo": "^2.0.3",
    "convict": "^4.4.1",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "express-validator": "^5.3.1",
    "lodash": "^4.17.11",
    "mongodb": "^3.5.7",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "shelljs": "^0.8.2",
    "swagger-jsdoc": "^3.2.3",
    "uuid": "^3.3.2",
    "validator": "^10.11.0"
  },
  "devDependencies": {
    "@types/ajv": "^1.0.0",
    "@types/bcrypt-nodejs": "0.0.30",
    "@types/body-parser": "^1.17.0",
    "@types/compression": "0.0.36",
    "@types/connect-mongo": "0.0.40",
    "@types/convict": "^4.2.1",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^6.1.0",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.16.0",
    "@types/express-session": "^1.15.11",
    "@types/express-validator": "^3.0.0",
    "@types/jest": "^20.0.8",
    "@types/lodash": "^4.14.120",
    "@types/mongodb": "^3.5.7",
    "@types/node": "^8.10.37",
    "@types/passport": "^1.0.0",
    "@types/passport-jwt": "^3.0.1",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "^2.0.6",
    "@types/swagger-jsdoc": "0.0.2",
    "@types/uuid": "^3.4.4",
    "@types/validator": "^10.9.0",
    "jest": "^20.0.4",
    "nodemon": "^1.18.6",
    "supertest": "^3.3.0",
    "ts-jest": "^20.0.14",
    "tslint": "^5.11.0",
    "typescript": "^3.5.1"
  }
}
